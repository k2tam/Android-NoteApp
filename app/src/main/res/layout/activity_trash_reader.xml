<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBackNoteTrash"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_back"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnNoteTrashDelF"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_del_f"/>

        <ImageButton
            android:id="@+id/btnNoteTrashRestore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_restore"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="16">

        <ImageView
            android:id="@+id/trashReaderImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/trashNoteTxtTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="Title"
            android:padding="5dp"
            android:textColor="@color/note_title"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/note_title"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/trashNoteTxtContent"
            android:background="@null"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Note"
            android:inputType="textMultiLine"
            android:textColor="@color/note_content"
            android:textSize="@dimen/note_content" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>